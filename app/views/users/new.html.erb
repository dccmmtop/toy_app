<%= provide(:title,'Sig up')%>
<h1>Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f|%>
    <%= f.label :name%>
    <%= f.text_field :name%>

    <%=f.label :email%>
    <%=f.email_field :email%>

    <%= f.label :password%>
    <%= f.password_field :password%>
    <%= f.label :confirmation%>
    <%= f.password_field :password_confirmation%>

    <%=f.submit "Creat my account",class:"btn btn-primary"%>
    <% end %>
    <% if @user.errors.full_messages.to_s.length>2%>

    <div class="alert alert-warning alert-dismissable">

      <%=    @user.errors.full_messages%>
    </div>
    <%end%>

  </div>

</div>
